<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smartclass">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity android:name="com.example.smartclass.view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                <category android:name="android.intent.category.LAUNCHER"></category>
            </intent-filter>
        </activity>

        <activity android:name="com.example.smartclass.view.TabLayoutActivity"></activity>
        <activity android:name="com.example.smartclass.view.RegisteredActivity"></activity>
        <activity android:name="com.example.smartclass.view.AttendanceStatisticsActivity"></activity>
        <activity android:name="com.example.smartclass.view.StudentStatusActivity"></activity>
        <activity android:name="com.example.smartclass.view.VerificationCodeLoginActivity"></activity>

    </application>
</manifest>
