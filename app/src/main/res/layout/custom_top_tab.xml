<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/px_150" android:layout_height="@dimen/px_109"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/topTabTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/overview"
        android:textColor="@drawable/text_top_tab_selector"
        android:textSize="@dimen/px_42"
        android:layout_marginTop="@dimen/px_31"/>

    <ImageView
        android:id="@+id/topTabUnderLine"
        android:layout_width="@dimen/px_85"
        android:layout_height="@dimen/px_4"
        android:layout_marginTop="@dimen/px_97"
        android:background="@drawable/ic_top_tab_selector"
        tools:ignore="ContentDescription" />

</RelativeLayout>