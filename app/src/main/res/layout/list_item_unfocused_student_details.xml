<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_41"
        android:layout_marginStart="@dimen/px_26">
        
        <TextView
            android:id="@+id/time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:textSize="@dimen/px_36"/>

        <TextView
            android:id="@+id/time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorLightText"
            android:textSize="@dimen/px_30"/>
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:textSize="@dimen/px_36"
        android:layout_marginBottom="@dimen/px_41"
        android:layout_marginStart="@dimen/px_300"/>

    <TextView
        android:id="@+id/detail_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:textSize="@dimen/px_36"
        android:layout_marginBottom="@dimen/px_41"
        android:layout_marginStart="@dimen/px_486"/>

    <TextView
        android:id="@+id/detail_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:textSize="@dimen/px_36"
        android:layout_marginBottom="@dimen/px_41"
        android:layout_marginStart="@dimen/px_798"/>

</RelativeLayout>