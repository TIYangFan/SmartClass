<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:wheel="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/px_1032"
        android:layout_height="@dimen/px_355"
        android:layout_marginStart="@dimen/px_24"
        android:layout_marginTop="@dimen/px_29"
        android:background="@drawable/bg_border_radius">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_49"
            android:layout_marginStart="@dimen/px_38"
            android:gravity="center_vertical">

            <com.example.smartclass.util.CircleBarView
                android:id="@+id/attendanceStatisticsCircleProgressBar"
                android:layout_width="@dimen/px_252"
                android:layout_height="@dimen/px_252"
                app:start_angle="270"
                app:sweep_angle="360"
                app:bg_color="@android:color/transparent"
                app:bar_width="8dp"/>

            <TextView
                android:id="@+id/attendanceStatisticsProgressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_91"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/px_54"
                android:textColor="@color/colorThemeTitle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_145"
                android:layout_centerHorizontal="true"
                android:text="出勤率"
                android:textSize="@dimen/px_28"
                android:textColor="@color/colorBlack"/>

        </RelativeLayout>

        <!--Late-->

        <ImageView
            android:layout_width="@dimen/px_121"
            android:layout_height="@dimen/px_121"
            android:layout_marginTop="@dimen/px_38"
            android:layout_marginStart="@dimen/px_321"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <LinearLayout
            android:layout_width="@dimen/px_280"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_81"
            android:layout_marginStart="@dimen/px_467">

            <TextView
                android:id="@+id/currentPersonOfLateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_48"
                android:textColor="@color/colorBlack"
                android:text="10人" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_36"
                android:textColor="@color/colorLightText"
                android:text="/" />

            <TextView
                android:id="@+id/currentOverallPersonOfLateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_36"
                android:textColor="@color/colorLightText"
                android:text="100" />

        </LinearLayout>

        <!--Absentee-->

        <ImageView
            android:layout_width="@dimen/px_121"
            android:layout_height="@dimen/px_121"
            android:layout_marginTop="@dimen/px_38"
            android:layout_marginStart="@dimen/px_668"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <LinearLayout
            android:layout_width="@dimen/px_280"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_81"
            android:layout_marginStart="@dimen/px_814">

            <TextView
                android:id="@+id/currentPersonOfAbsenteeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_48"
                android:textColor="@color/colorBlack"
                android:text="10人" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_36"
                android:textColor="@color/colorLightText"
                android:text="/" />

            <TextView
                android:id="@+id/currentOverallPersonOfAbsenteeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_36"
                android:textColor="@color/colorLightText"
                android:text="100" />

        </LinearLayout>

        <!--LeaveEarly-->

        <ImageView
            android:layout_width="@dimen/px_121"
            android:layout_height="@dimen/px_121"
            android:layout_marginTop="@dimen/px_198"
            android:layout_marginStart="@dimen/px_321"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <LinearLayout
            android:layout_width="@dimen/px_280"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_240"
            android:layout_marginStart="@dimen/px_467">

            <TextView
                android:id="@+id/currentPersonOfLeaveEarlyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_48"
                android:textColor="@color/colorBlack"
                android:text="10人" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_36"
                android:textColor="@color/colorLightText"
                android:text="/" />

            <TextView
                android:id="@+id/currentOverallPersonOfLeaveEarlyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_36"
                android:textColor="@color/colorLightText"
                android:text="100" />

        </LinearLayout>

        <!--Abnormal-->

        <ImageView
            android:layout_width="@dimen/px_121"
            android:layout_height="@dimen/px_121"
            android:layout_marginTop="@dimen/px_198"
            android:layout_marginStart="@dimen/px_668"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <LinearLayout
            android:layout_width="@dimen/px_280"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_240"
            android:layout_marginStart="@dimen/px_814">

            <TextView
                android:id="@+id/currentPersonOfAbnormalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_48"
                android:textColor="@color/colorBlack"
                android:text="10人" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_36"
                android:textColor="@color/colorLightText"
                android:text="/" />

            <TextView
                android:id="@+id/currentOverallPersonOfAbnormalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_36"
                android:textColor="@color/colorLightText"
                android:text="100" />

        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/px_1032"
        android:layout_height="@dimen/px_552"
        android:layout_marginTop="@dimen/px_409"
        android:layout_marginStart="@dimen/px_24"
        android:background="@drawable/bg_border_radius">

        <LinearLayout
            android:id="@+id/loadingProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ProgressBar
                android:layout_width="@dimen/px_121"
                android:layout_height="@dimen/px_121"
                android:layout_gravity="center"
                android:visibility="visible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_30"
                android:text="数据加载中"/>

        </LinearLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/attendanceStatisticsTabLayout"
            android:layout_width="@dimen/px_998"
            android:layout_height="@dimen/px_93"
            android:layout_marginStart="@dimen/px_17"
            app:tabIndicatorHeight="@dimen/px_5"
            app:tabTextColor="@color/colorTextColorHint"
            app:tabSelectedTextColor="@color/colorThemeTitle"
            app:tabBackground="@android:color/transparent"
            app:tabRippleColor="@android:color/transparent">

        </android.support.design.widget.TabLayout>

        <View
            android:layout_width="@dimen/px_998"
            android:layout_height="@dimen/px_2"
            android:layout_marginTop="@dimen/px_93"
            android:layout_marginStart="@dimen/px_17"
            android:background="@color/colorUnderLine"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/attendanceStatisticsViewPager"
            android:layout_width="@dimen/px_998"
            android:layout_height="@dimen/px_457"
            android:layout_marginTop="@dimen/px_95"
            android:layout_marginStart="@dimen/px_17">

        </android.support.v4.view.ViewPager>

    </RelativeLayout>

    <!--next view-->
    <RelativeLayout
        android:layout_width="@dimen/px_1032"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_986"
        android:layout_marginStart="@dimen/px_24"
        android:background="@drawable/bg_border_radius">

        <android.support.design.widget.TabLayout
            android:id="@+id/studentsWithAttendanceProblemsTabLayout"
            android:layout_width="@dimen/px_998"
            android:layout_height="@dimen/px_93"
            android:layout_marginStart="@dimen/px_17"
            app:tabIndicatorHeight="@dimen/px_5"
            app:tabTextColor="@color/colorTextColorHint"
            app:tabSelectedTextColor="@color/colorThemeTitle"
            app:tabBackground="@android:color/transparent"
            app:tabRippleColor="@android:color/transparent">

        </android.support.design.widget.TabLayout>

        <View
            android:layout_width="@dimen/px_998"
            android:layout_height="@dimen/px_2"
            android:layout_marginTop="@dimen/px_93"
            android:layout_marginStart="@dimen/px_17"
            android:background="@color/colorUnderLine"/>

        <com.example.smartclass.util.WrapContentHeightViewPager
            android:id="@+id/studentsWithAttendanceProblemsViewPager"
            android:layout_width="@dimen/px_1032"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_95">

        </com.example.smartclass.util.WrapContentHeightViewPager>

    </RelativeLayout>

</RelativeLayout>